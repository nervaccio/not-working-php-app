{% extends "base.twig" %}

{% block content %}
<div class="w-100 p-4 mb-4 border border-yellow-500 bg-yellow-300 rounded-md shadow-md flex items-center">
    <svg class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="w-6 h-6">
        <path strokeLinecap="round" strokeLinejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
    </svg>

    <b class="ml-2">Dati generati con :</b> <a href="http://https://www.fakedata-generator.com" target="_blank" rel="noopener noreferrer">https://www.fakedata-generator.com</a>
</div>
<table class="table-auto border border-black">
    <thead>
        <tr>
            <th class="border border-black p-2">Name</th>
            <th class="border border-black p-2">Surname</th>
            <th class="border border-black p-2">Address</th>
            <th class="border border-black p-2">Email</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td class="border border-black p-2">{{ user.name }}</td>
            <td class="border border-black p-2">{{ user.surname }}</td>
            <td class="border border-black p-2">{{ user.address }}</td>
            <td class="border border-black p-2">{{ user.email }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
